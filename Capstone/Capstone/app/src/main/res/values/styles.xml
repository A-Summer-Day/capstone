<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlActivated">#009688</item> <!--selected day-->
        <item name="android:textColorPrimary">#000</item> <!--days of the month-->
        <item name="android:textColorSecondary">#FFF</item>    <!--days of the week-->
    </style>

</resources>
